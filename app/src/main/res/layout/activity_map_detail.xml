<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--fragment to display our maps-->
    <fragment xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapDetailActivity" />

    <!-- City Name TextView -->
    <TextView
        android:id="@+id/CityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="94dp"
        android:text="City Name"
        android:textSize="50sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:padding="8dp" />

    <!-- Latitude ans Longitude TextView -->
    <TextView
        android:id="@+id/LatitudeAndLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CityName"
        android:layout_marginRight="94dp"
        android:text="Latitude and Longitude: 0.0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:background="#FF3700B3"
        android:elevation="4dp"
        android:radius="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <!-- You can add buttons or other controls here -->
    </LinearLayout>

</RelativeLayout>